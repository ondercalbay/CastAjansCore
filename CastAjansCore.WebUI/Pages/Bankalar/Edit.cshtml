@page
@model CastAjansCore.WebUI.Pages.Bankalar.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Banka</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Banka.Adi" class="control-label"></label>
                <input asp-for="Banka.Adi" class="form-control" />
                <span asp-validation-for="Banka.Adi" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Banka.Id" />
            <div class="form-group">
                <label asp-for="Banka.EkleyenId" class="control-label"></label>
                <select asp-for="Banka.EkleyenId" class="form-control" asp-items="ViewBag.EkleyenId"></select>
                <span asp-validation-for="Banka.EkleyenId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Banka.EklemeZamani" class="control-label"></label>
                <input asp-for="Banka.EklemeZamani" class="form-control" />
                <span asp-validation-for="Banka.EklemeZamani" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Banka.GuncelleyenId" class="control-label"></label>
                <select asp-for="Banka.GuncelleyenId" class="form-control" asp-items="ViewBag.GuncelleyenId"></select>
                <span asp-validation-for="Banka.GuncelleyenId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Banka.GuncellemeZamani" class="control-label"></label>
                <input asp-for="Banka.GuncellemeZamani" class="form-control" />
                <span asp-validation-for="Banka.GuncellemeZamani" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Banka.Aktif" /> @Html.DisplayNameFor(model => model.Banka.Aktif)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
