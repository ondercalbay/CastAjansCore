@inject CastAjansCore.WebUI.Helper.LoginHelper LoginHelper
<!-- Main sidebar -->
<div class="sidebar sidebar-light sidebar-main sidebar-expand-md">
    <!-- Sidebar mobile toggler -->
    <div class="sidebar-mobile-toggler text-center">
        <a href="#" class="sidebar-mobile-main-toggle">
            <i class="icon-arrow-left8"></i>
        </a>
        Navigation
        <a href="#" class="sidebar-mobile-expand">
            <i class="icon-screen-full"></i>
            <i class="icon-screen-normal"></i>
        </a>
    </div>
    @{
        //var Model = (UserHelper)ViewBag.UserHelper;
        var Model = LoginHelper.UserHelper;
    }
    <!-- /sidebar mobile toggler -->
    <!-- Sidebar content -->
    <div class="sidebar-content">
        <!-- User menu -->
        <div class="sidebar-user-material">
            <div class="sidebar-user-material-body">
                <div class="card-body text-center">
                    <a href="#">
                        @*<img src="/Limitless_2_2/images/image.png" class="img-fluid rounded-circle shadow-1 mb-3" width="80" height="80" alt="">*@

                        <img src="~/Resimler/logo_small.png" width="120" />
                    </a>
                    <h6 class="mb-0 text-white text-shadow-dark">@Model.Adi @Model.Soyadi</h6>
                    <span class="font-size-sm text-white text-shadow-dark">@Model.KullaniciAdi</span>
                </div>

                <div class="sidebar-user-material-footer">
                    <a href="#user-nav" class="d-flex justify-content-between align-items-center text-shadow-dark dropdown-toggle" data-toggle="collapse"><span>Hesap Bilgisi</span></a>
                </div>
            </div>
            <div class="collapse" id="user-nav">
                <ul class="nav nav-sidebar">
                    <li class="nav-item">
                        <a asp-controller="Kullanicilar" asp-action="Edit" asp-route-Id="@Model.Id" class="nav-link">
                            <i class="icon-user-plus"></i>
                            <span>Kullanıcı Bilgileri</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Kullanicilar/SifremiDegistir" class="nav-link">
                            <i class="icon-user-plus"></i>
                            <span>Şifremi değiştir</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Projeler/Projelerim" class="nav-link">
                            <i class="icon-coins"></i>
                            <span>Projelerim</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Kullanicilar/LogOut" class="nav-link">
                            <i class="icon-switch2"></i>
                            <span>Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- /user menu -->
        <!-- Main navigation -->
        <div class="card card-sidebar-mobile">
            <ul class="nav nav-sidebar" data-nav-type="accordion">
                <!-- Main -->
                <li class="nav-item-header"><div class="text-uppercase font-size-xs line-height-xs">Menü</div> <i class="icon-menu" title="Menü"></i></li>

                @foreach (var item in Model.Menuler)
                {
                    if (item.AltMenuler.Count == 0)
                    {
                        <li class="nav-item">
                            <a href=@item.Link class="nav-link"><i class=@item.Icon></i> <span>@item.Adi</span></a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item nav-item-submenu">
                            @*nav-item-expanded nav-item-open*@

                            <a href="#" class="nav-link"><i class=@item.Icon></i> <span>@item.Adi</span></a>
                            <ul class="nav nav-group-sub" data-submenu-title="Sistem">
                                @foreach (var altMenu in item.AltMenuler)
                                {
                                    <li class="nav-item"><a href=@altMenu.Link class="nav-link">@altMenu.Adi</a></li>
                                }
                            </ul>
                        </li>
                    }

                }
                <!-- /main -->
            </ul>
        </div>
        <!-- /main navigation -->
    </div>
    <!-- /sidebar content -->

</div>
<!-- /main sidebar -->