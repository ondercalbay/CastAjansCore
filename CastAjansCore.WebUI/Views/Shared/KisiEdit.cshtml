@model CastAjansCore.Dto.KisiEditDto
@using  CastAjansCore.Entity

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
@{ Html.ViewData.TemplateInfo.HtmlFieldPrefix = "KisiEditDto"; }
<input asp-for="Kisi.Id" hidden class="form-control" />

<div class="col-md-6">
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title"><i class="icon-reading mr-2"></i> Kisi Bilgileri</h5>
        </div>
        <div class="card-body">
            <fieldset>
                <div class="form-group row">
                    <label asp-for="Kisi.TC" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <input asp-for="Kisi.TC" class="form-control" />
                            <span asp-validation-for="Kisi.TC" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Kisi.Adi" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <input asp-for="Kisi.Adi" class="form-control" />
                            <span asp-validation-for="Kisi.Adi" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Kisi.Soyadi" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <input asp-for="Kisi.Soyadi" class="form-control" />
                            <span asp-validation-for="Kisi.Soyadi" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Kisi.DogumTarihi" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <input asp-for="Kisi.DogumTarihi" type="date" asp-format="{0:dd/MM/yyyy}" class="form-control" />
                            <span asp-validation-for="Kisi.DogumTarihi" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Kisi.Cinsiyet" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <select asp-for="Kisi.Cinsiyet" asp-items="Html.GetEnumSelectList<EnuCinsiyet>()" class="form-control"></select>
                            <span asp-validation-for="Kisi.Cinsiyet" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Kisi.KanGrubu" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <select asp-for="Kisi.KanGrubu" asp-items="Html.GetEnumSelectList<EnuKanGrubu>()" class="form-control"></select>
                            <span asp-validation-for="Kisi.KanGrubu" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="Kisi.UyrukId" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">
                        <div class="form-group">
                            <select asp-for="Kisi.UyrukId" asp-items="Model.Uyruklar" class="form-control"></select>
                            <span asp-validation-for="Kisi.UyrukId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </fieldset>

        </div>
    </div>

</div>

<div class="col-md-6">
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title"><i class="icon-address-book3 mr-2"></i> İletişim</h5>
        </div>

        <div class="card-body">
            <fieldset>
                <div class="form-group row">
                    <label asp-for="Kisi.EPosta" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <input asp-for="Kisi.EPosta" class="form-control" />
                            <span asp-validation-for="Kisi.EPosta" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Kisi.Telefon" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <input asp-for="Kisi.Telefon" class="form-control" />
                            <span asp-validation-for="Kisi.Telefon" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Kisi.Telefon2" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <input asp-for="Kisi.Telefon2" class="form-control" />
                            <span asp-validation-for="Kisi.Telefon2" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Kisi.Faks" class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">

                        <div class="form-group">
                            <input asp-for="Kisi.Faks" class="form-control" />
                            <span asp-validation-for="Kisi.Faks" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Kisi.Ilce.IlId" class="col-lg-3 col-form-label"></label>
                    <span asp-validation-for="Kisi.Ilce.IlId" class="text-danger"></span>
                    <div class="col-lg-9">
                        <select asp-for="Kisi.Ilce.IlId" asp-items="@Model.Iller" onchange="GetIlceler($('#KisiEditDto_Kisi_Ilce_IlId'),$('#KisiEditDto_Kisi_IlceId'))" class="form-control">
                            Seçiniz
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Kisi.IlceId" class="col-lg-3 col-form-label"></label>
                    <span asp-validation-for="Kisi.IlceId" class="text-danger"></span>
                    <div class="col-lg-9">
                        <select asp-for="Kisi.IlceId" asp-items="@Model.Ilceler" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Kisi.Adres" class="col-lg-3 col-form-label"></label>
                    <span asp-validation-for="Kisi.Adres" class="text-danger"></span>
                    <div class="col-lg-9">
                        <textarea asp-for="Kisi.Adres" rows="3" class="form-control"></textarea>
                    </div>
                </div>

            </fieldset>
        </div>
    </div>
</div>
