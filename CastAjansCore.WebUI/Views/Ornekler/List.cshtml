@model IEnumerable<CastAjansCore.Entity.Kullanici>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Basic table -->
<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title"></h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" asp-action="Edit">+</a>
                @*<a class="list-icons-item" data-action="collapse"></a>*@
                <a class="list-icons-item" data-action="reload"></a>
                @*<a class="list-icons-item" data-action="remove"></a>*@
            </div>
        </div>
    </div>
    @*<div class="card-body">

        </div>*@
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Kisi.Adi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Kisi.Soyadi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KullaniciAdi)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kisi.Adi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kisi.Soyadi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KullaniciAdi)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="icon-pencil"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- /basic table -->
