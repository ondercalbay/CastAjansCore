@model CastAjansCore.Dto.MusteriEditDto

@{
    ViewData["Title"] = "Müşteriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">
                        <i class="icon-newspaper mr-2"></i> Bilgiler
                    </h5>
                </div>

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.Musteri.Id" />
                    <input type="hidden" asp-for="@Model.Musteri.EkleyenId" />
                    <input type="hidden" asp-for="@Model.Musteri.EklemeZamani" />
                    <input type="hidden" asp-for="@Model.Musteri.GuncelleyenId" />
                    <input type="hidden" asp-for="@Model.Musteri.GuncellemeZamani" />
                    <input type="hidden" asp-for="@Model.Musteri.Aktif" />

                    <fieldset>
                        <div class="form-group row">
                            <label asp-for="@Model.Musteri.Adi" class="col-md-3 col-form-label"></label>
                            <span asp-validation-for="@Model.Musteri.Adi" class="text-danger"></span>
                            <div class="col-md-9">
                                <input asp-for="@Model.Musteri.Adi" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="@Model.Musteri.Telefon" class="col-md-3 col-form-label"></label>
                            <span asp-validation-for="@Model.Musteri.Telefon" class="text-danger"></span>
                            <div class="col-md-9">
                                <input asp-for="@Model.Musteri.Telefon" data-mask="0 999 999 9999" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="@Model.Musteri.Telefon2" class="col-md-3 col-form-label"></label>
                            <span asp-validation-for="@Model.Musteri.Telefon2" class="text-danger"></span>
                            <div class="col-md-9">
                                <input asp-for="@Model.Musteri.Telefon2" data-mask="0 999 999 9999"  class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="@Model.Musteri.Faks" class="col-md-3 col-form-label"></label>
                            <span asp-validation-for="@Model.Musteri.Faks" class="text-danger"></span>
                            <div class="col-md-9">
                                <input asp-for="@Model.Musteri.Faks" data-mask="0 999 999 9999" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="@Model.Musteri.EPosta" class="col-md-3 col-form-label"></label>
                            <span asp-validation-for="@Model.Musteri.EPosta" class="text-danger"></span>
                            <div class="col-md-9">
                                <input asp-for="@Model.Musteri.EPosta" class="form-control" />
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>


        <div class="col-md-6">
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">
                        <i class="icon-home2 mr-2"></i> Adres
                    </h5>
                </div>

                <div class="card-body">
                    <fieldset>
                        <div class="form-group row">
                            <label asp-for="@Model.Musteri.Ilce.IlId" class="col-md-3 col-form-label"></label>
                            <span asp-validation-for="@Model.Musteri.Ilce.IlId" class="text-danger"></span>
                            <div class="col-md-9">
                                <select asp-for="@Model.Musteri.Ilce.IlId" asp-items="@Model.Iller" onchange="GetIlceler($('#Musteri_Ilce_IlId'),$('#Musteri_IlceId'))" class="form-control">
                                    Seçiniz
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="@Model.Musteri.IlceId" class="col-md-3 col-form-label"></label>
                            <span asp-validation-for="@Model.Musteri.IlceId" class="text-danger"></span>
                            <div class="col-md-9">
                                <select asp-for="@Model.Musteri.IlceId" asp-items="@Model.Ilceler" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="@Model.Musteri.Adres" class="col-md-3 col-form-label"></label>
                            <span asp-validation-for="@Model.Musteri.Adres" class="text-danger"></span>
                            <div class="col-md-9">
                                <textarea asp-for="@Model.Musteri.Adres" rows="3" class="form-control"></textarea>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-danger left"><i class="mi-arrow-back"></i> Geri</a>
            <button type="submit" class="btn btn-primary right"><i class="mi-check"></i> Kaydet</button>
        </div>
    </div>
</form>
